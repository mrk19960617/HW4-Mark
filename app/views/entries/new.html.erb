<h1 class="mb-4">New Tacogram Entry</h1>

<%= form_with model: @entry, local: true, html: { multipart: true } do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control", rows: 4, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :photo, "Upload Photo" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <%= form.submit "Create Entry", class: "btn btn-primary" %>
<% end %>